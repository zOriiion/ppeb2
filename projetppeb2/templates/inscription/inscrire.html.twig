{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} - Inscription {% endblock %}
{% block content %}

 <div class="container-fluid">
 <div class="row justify-content-center">
 <h1 class="text-center text-primary p-4"> S'inscrire</h1>
 </div>
 <div class="row justify-content-center">
 <div class="col-12 bg-white p-4 m-0 text-primary">
 {{ form_start(form) }}
<div class="form-group">
 {{ form_label(form.username, 'Votre username (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
 {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
 </div>
 <div class="form-group">
 {{ form_label(form.password, 'Votre mot de passe (*) ', {'label_attr':
{'class': 'font-weight-bold'}}) }}
 {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
 </div>
 <div class="form-group">
 {{ form_label(form.confirmation, 'Confirmation de votre mot de passe (*)', {'label_attr': {'class': 'font-weight-bold'}})
}}
 {{ form_widget(form.confirmation, {'attr': {'class': 'form-control'}}) }}
 </div>
  {# <div class="form-group">
 {{ form_label(form.utilisateur, 'Utilisateur (*)', {'label_attr': {'class': 'font-weight-bold'}})
}}
 {{ form_widget(form.utilisateur, {'attr': {'class': 'form-control'}}) }}
 </div> #}
 <div class="form-group mx-auto text-center">
 {{ form_widget(form.inscrire, { 'label': "S'inscrire", 'attr': {'class': 'btn font-weightbold bg-primary text-white mx-auto text-center'}}) }}
 </div>
 {{ form_end(form) }}
 </div>
 </div>
</div>

{% if is_granted('IS_AUTHENTICATED_FULLY')%}
        <h3>Bonjour {{app.user.email}}</h3>
    {% endif %}
{% if is_granted('ROLE_ADMIN') %}
<p>Vous êtes connecté en tant que {{ app.user.username }} (Admin)</p>
{% else %}
{% if is_granted('ROLE_USER') %}
<p>Vous êtes connecté en tant que {{ app.user.username }} (Utilisateur)</p> {% endif %}
{% endif %}


{% endblock %}